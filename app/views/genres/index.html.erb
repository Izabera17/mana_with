<div class="first-form-view">
  <%= render 'shared/header' %>
     <div class="result-genres-main-full">
      <div class="result-genres-name-title">
        <p>ジャンル一覧・追加</p>
      </div>
    </div>
  <div class="top-contents">
    <aside class="sidebar_left">
      <%= render 'shared/sidebar_left' %>
    </aside>
    <article class="form-article">
       <div class="form-title">
      <div class="error-message">
        <% if @genre.errors.any? %>
         <%= @genre.errors.count %>件のエラーが発生しました
         <ul>
           <% @genre.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
         </ul>
        <% end %>
      </div>
    </div>
      <div>
        <%= form_with model: @genre do |f| %>
          <div>
            <div></div>
            <div class="genre-search-content-inner">
              <div class="genre-search-btn">
                <%= f.text_field :name, placeholder: "ジャンル名"%>
              </div>
              <div class="genre-search-btn-submit">
                <%= f.submit "追加" %>
              </div>  
            </div>
          </div>
        <% end %>
      </div>
      <div>
        <div>
          <table class="genre-table">
            <thead class="genre-title">
              <tr>
                <th>ジャンル名</th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr class="genre-table-tr">
                <td class="genre-table-td-name"><%= genre.name %></td>
                <td class="genre-table-td-edit"><%= link_to "編集する", edit_genre_path(genre.id) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div></div>
      </div>
    </article>
    <aside class="sidebar_right">
      <%= render 'shared/sidebar_right' %>
    </aside>
  </div>
</div>
<%= render 'shared/footer' %>