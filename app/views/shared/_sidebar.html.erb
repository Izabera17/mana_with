<div class="sidebar-full">
  <div class="sidebar">
  <div class="sidebar-contents">
    <div class="sidebar-menu">
      <p>　メニュー</p>
      <div class="sidebar-list">
        <ul>
          <li>
            <%= link_to home_path, class: "home-link" do %>
              <%= image_tag '/assets/home_icon.png', class:'icon' %>
              <span>Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to users_path, class: "icon-link" do %>
              <%= image_tag '/assets/users_icon.jpeg', class:'icon' %>
              <span>Users</span>
            <% end %>
          </li>
          <li>
            <%= link_to post_learnings_path, class: "icon-link" do %>
              <%= image_tag '/assets/article_icon.png', class:'icon' %>
              <span>学習投稿一覧</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="sidebar-btn">
    <%= link_to "投稿する", new_post_learning_path, class: "sidebar-btn-link" %>
  </div>
  <div class="sidebar-contents">
    <div class="sidebar-serch">
      <p class="search-key">　キーワードで探す</p>
        <div class="sidebar-list">
          <%= form_tag(search_post_learnings_path,:method => 'get') do %>
            <div class="search-form">
              <%= text_field_tag :search %>
              <%= submit_tag '検索', :name => nil %>
            </div>
          <% end %>
          <p class="search-genre">　ジャンルで探す</p>
          <% @genres.each do |genre| %>
            <ul>
              <li>
                <%= link_to genre.name, search_post_learnings_path(genre.id), method: :get %>
              </li>
            </ul>
          <% end %>
        </div>
    </div>
  </div>
</div>
