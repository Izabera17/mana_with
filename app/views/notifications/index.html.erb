<div class="first-home-view">
  <%= render 'shared/header' %>
  <%= render 'shared/flash' %>
  <div class="result-notifications-main-full">
    <div class="result-notifications-name-title">
      <p>通知</p>
    </div>
  </div>
  <div class="top-contents">
    <aside class="sidebar_left">
      <%= render 'shared/sidebar_left' %>
    </aside>
    <article class="users-article">
      <div class="destroy_all_notifications">
        <%= link_to destroy_all_notifications_path, method: :delete do %>
          <h7>全削除</h7>
        <% end %>
      </div>
      <hr>
        <% if @notifications.present? %>
          <div class="users-index">
            <% @notifications.each do |notification| %>
              <%= render partial: 'notifications/notification', locals: {notification: notification} %>
              <%= paginate @notifications, class: "page" %>
            <% end %> 
          </div>
        <% else %>
            <p class="no-notification">通知はありません</p>
        <% end %>
    </article>
    <aside class="sidebar_right">
      <%= render 'shared/sidebar_right' %>
    </aside>
  </div>
</div>
<%= render 'shared/footer' %>