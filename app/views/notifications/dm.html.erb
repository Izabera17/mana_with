<div class="first-home-view">
  <%= render 'shared/header' %>
  <div class="result-notifications-main-full">
    <div class="result-notifications-name-title">
      <p>コメント通知</p>
    </div>
  </div>
  <div class="top-contents">
    <aside class="sidebar_left">
      <%= render 'shared/sidebar_left' %>
    </aside>
    <article class="users-article">
      <div class="destroy_all_notifications">
        <%= link_to notifications_destroy_all_dm_path, method: :delete do %>
          <h7>全削除</h7>
        <% end %>
      </div>
      <hr>
      <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
        <% if @notifications.exists? %>
            <div class="users-index">
                <%= render "notification_dm", notifications %>
            </div>
        <% else %>
            <p class="no-notification">コメントはありません</p>
        <% end %>
    </article>
    <aside class="sidebar_right">
      <%= render 'shared/sidebar_right' %>
    </aside>
  </div>
</div>
<%= render 'shared/footer' %>