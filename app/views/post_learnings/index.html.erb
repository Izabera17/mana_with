<div class="main">
   <%= render 'shared/header' %>
    <div class="top-contents">
      <aside>
      <%= render 'shared/sidebar' %> 
      </aside>
      <article>
        <div>
          <% @post_learnings.each do |post_learnings| %>
            <p>
              <%= link_to post_learning_path(post_learnings.id) do %>
                <%= post_learnings.learning_name %>  
              <% end %>
            </p>
            <p><%= time_ago_in_words(post_learnings.created_at) %>前</p>
            <div>
              <p>頑張ったこと</p>
              <p><%= post_learnings.learning_content %></p>
              <p>
                <%= image_tag post_learnings.post_image.variant(resize_to_limit: [300,200]) if post_learnings.post_image.attached? %>
              </p>
            </div>
            <div>
              <p>学びの本音</p>
                <p><%= post_learnings.learning_content %></p>  
            </div>
            <div>
              <p>学びの本音</p>
              <p><%= post_learnings.learning_content %></p>      
            </div>
            <div>
              <p>コメント <%= post_learnings.post_comments.count %>件</p>
              <p>いいね <%= post_learnings.favorites.count %>件</p>  
            </div>
          <% end %>
          
          <% if current_user.admin? && !current_user?(user) %>
            <%= link_to "削除", post_learning_path(@post_learning), method: :delete %>
          <% end %>
        </div>
      </article>
    </div>
</div>


