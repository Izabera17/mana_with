<div class="first-form-view">
  <%= render 'shared/header' %>
  <div>
    <div class="form-title">
     <h2></h2>
    </div>
  </div>
  <div class="top-contents">
    <aside class="sidebar_left">
      <%= render 'shared/sidebar_left' %>
      <div>
             <% if @post_learning.errors.any? %>
       <%= @post_learning.errors.count %>件のエラーが発生しました
       <ul>
         <% @post_learning.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
      <% end %>
      </div>
    </aside>
    <article class="form-article">
     <div class="form-view">
      <h1>
         <strong>投稿フォーム</strong>
      </h1>
      <%= form_with model: @post_learning, local:true do |f| %>
        <table class="form-table">
          <tr class="form-name">
            <th class="form-th"><%= f.label :learning_name, "学習名" %></th>
            <td class="form-td"><%= f.text_field :learning_name, placeholder: "例）HTMLコーディング"  %></th>
          </tr>
          <tr class="form-content">
            <th><%= f.label :learning_content, "頑張ったこと" %></th>
            <td><%= f.text_area :learning_content, placeholder: "例）Flexboxの理解と実装。marginの余白調整" %></th>
          </tr>
          <tr class="form-real">
             <th><%= f.label :learning_real, "学びの本音" %></th>
             <td><%= f.text_area :learning_real, placeholder: "例）Flexboxを実装できたけど、やっぱり難しい。もっと良い方法を学びたい。デザインは自身ある！" %></th>
          </tr>
          <tr class="form-genre">
            <th><%= f.label :genre_id, "ジャンル" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '選択してください' }  %></th>
          </tr>
          <tr class="form-post-image">
            <th><%= f.label :post_image, "商品画像" %></th>
            <td><%= f.file_field :post_image, accept: "image/*"  %></th>
          </tr>
        </table>
        <div>
           <%= f.submit '新規登録' %>
        </div>
       <% end %>
     </div>
    </article>
    <aside class="sidebar_right">
      <%= render 'shared/sidebar_right' %>
    </aside>
  </div>
</div>


